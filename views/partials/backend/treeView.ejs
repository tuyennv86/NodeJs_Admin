    <% items.forEach(function(item){ %>
    <li>
    <% var space = "";
     for(var j = 1 ;j< item.level; j++ ){
            space = space + "--";
    } %>
        <a href="<%= item._id %>"> <%= space %> <%= item.categoryName %></a>         
        <%- include('treeView', {items: item.children}) %>       
    </li>
    <% }) %>

