<% include ../../partials/backend/aside %> 
<div id="right-panel" class="right-panel">
<% include ../../partials/backend/header %>

<div class="breadcrumbs">
    <div class="col-sm-4">
        <div class="page-header float-left">
            <div class="page-title">
                <h1>Danh sách loại danh mục</h1>
            </div>
        </div>
    </div>
    <div class="col-sm-8">
        <div class="page-header float-right">
            <div class="page-title">
                <ol class="breadcrumb text-right">
                    <li><a href="index">Trang chủ</a></li>                  
                    <li class="active">Danh sách loại danh mục</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="content mt-3">
    <div class="animated fadeIn">
            <form action="/admin/category/categorytype/<%= current %>" method="POST" class="form-horizontal" onSubmit="if(!confirm('Bạn có muốn xóa không?')){return false;}">
         <div class="card">
                    <div class="card-header">
                        <div class="col col-md-6">
                        <i class="mr-2 fa fa-align-justify"></i>
                        <strong class="card-title">Danh sách các danh mục</strong>
                        </div>
                        <div class="col-12 col-md-6">
                                <div class="float-right mt-2">
                                    <a href="/admin/category/addcategorytype" class="btn btn-success btn-sm" style="color: #fff;">
                                        <i class="fa fa-plus"></i> Thêm mới
                                    </a>                                  
                                    <button type="submit" class="btn btn-danger btn-sm" id="bntdeleteList" disabled>
                                            <i class="fa fa-trash-o"></i> Xóa danh mục
                                    </button>                                   
                                </div>
                        </div>
                        
                    </div>
                    <div class="card-body">
                     <% include ../../partials/backend/messages %>                       
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col"><input type="checkbox" id="checkAll"></th>
                                    <th scope="col">Chủng loại</th>
                                    <th scope="col">Kiểu loại</th>
                                    <th scope="col">Người tạo</th>                                   
                                    <th scope="col">Ngày tạo</th>                                                           
                                    <th scope="col"></th>
                                </tr>
                            </thead>
                            <tbody>
                            <% data.forEach(item => { %>
                             <tr>
                                    <td scope="row"><input type="checkbox" name="checkItem" class="checkItem" value="<%= item._id %>"></td>
                                    <td><a href="/admin/category/TypeIndex/<%= item._id%>" class="btn-link"><%= item.typeName %></a></td>
                                    <td><%= item.typeInt %></td>                                    
                                    <td><%= item.createBy %></td>
                                    <td><%= item.date_mm_dd_yyyy %></td>                                
                                    <td>
                                        <div class="float-right">
                                            <a class="btn btn-primary btn-sm" href="/admin/category/editcategorytype/<%= item._id %>?url=<%= linkUrl %>/<%= current %>"><i class="fa fa-wrench"></i>&nbsp; Sửa</a>
                                            <a class="btn btn-danger btn-sm" href="/admin/category/deletecategorytype/<%= item._id %>?url=<%= linkUrl %>/<%= current %>"  onclick="return confirm('Bạn có muốn chủng loại này không?');"><i class="fa fa-trash"></i>&nbsp; Xóa</a>
                                        </div>
                                    </td>
                                </tr>     
                        
                            <% }) %>                   
                            </tbody>
                        </table>
                        <% include ../../partials/backend/PageNavigation %>
                    </div>
            </div>
            </form>
        </div>
    </div>
</div>

</div>